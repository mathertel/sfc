{
  "name": "sfc",
  "version": "1.0.0",
  "description": "Using Single File Components (SFC) client side by loading components from the browser.",
  "license": "BSD 3-Clause",
  "author": "Matthias Hertel",
  "type": "module",
  "bin": {
    "pack-sfc": "bin/pack-sfc.js"
  },
  "scripts": {
    "serve": "npx http-server -o test/index.htm",
    "test:src": "tsc -noEmit -p src\\tsconfig.json",
    "build:hub":       "esbuild src\\data-hub.ts --bundle --format=esm --minify    --drop:console --outfile=data-hub.js",
    "build:loader":    "esbuild src\\loader.ts   --bundle --format=esm --minify    --drop:console --outfile=loader.js",
    "build:hub-watch": "esbuild src\\data-hub.ts --bundle --format=esm --sourcemap --watch        --outfile=data-hub.js",
    "build": "npm run test:src && npm run build:hub && npm run build:loader"
  },
  "devDependencies": {
    "esbuild": "^0.25.2",
    "html-minifier-terser": "^7.2.0",
    "typescript": "^5.8.2",
    "yargs": "^17.7.2"
  }
}
